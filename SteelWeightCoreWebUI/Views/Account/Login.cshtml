@using SteelWeightCoreWebUI.Models.Entities
@model User

@{
    ViewData["Title"] = "사용자 로그인";
}

<link rel="stylesheet" href="~/css/login_styles.css" />

<div class="text-left">
    <h3>로그인</h3>
</div>
@using (Html.BeginForm()) {
    <div>
        <div class="form-group">
            <label>아이디:</label>
            @Html.TextBoxFor(x => x.user_name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.user_name)
        </div>
        <div class="form-group">
            <label>비밀번호:</label>
            @Html.TextBoxFor(x => x.user_pwd, new { @class = "form-control", @type = "password" })
            @Html.ValidationMessageFor(x => x.user_pwd)
        </div>
    </div>
    <div class="text-right">
        <input type="submit" value="로그인" class="btn btn-primary" />
    </div>
}